{
  "name": "openrowingmonitor",
  "version": "0.8.0",
  "description": "A rowing monitor for rowing exercise machines",
  "main": "app/server.js",
  "author": "Lars Berning",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/laberning/openrowingmonitor.git"
  },
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint ./app ./config && markdownlint '**/*.md' --ignore node_modules",
    "start": "node app/server.js",
    "dev": "npm-run-all --parallel start build:watch",
    "build": "snowpack build",
    "build:watch": "snowpack build --watch",
    "test": "uvu"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm test"
  },
  "dependencies": {
    "@abandonware/bleno": "^0.5.1-4",
    "@abandonware/noble": "^1.9.2-14",
    "ant-plus": "^0.1.24",
    "finalhandler": "^1.1.2",
    "loglevel": "^1.8.0",
    "nosleep.js": "^0.12.0",
    "onoff": "^6.0.3",
    "serve-static": "^1.14.1",
    "ws": "^8.2.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "markdownlint-cli": "^0.30.0",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.7.0",
    "snowpack": "^3.8.8",
    "uvu": "^0.5.2"
  }
}

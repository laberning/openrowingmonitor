{
  "env": {
    "browser": true,
    "node": false,
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:wc/recommended",
    "plugin:lit/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "ignorePatterns": ["**/*.min.js"],
